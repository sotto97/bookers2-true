<!-- 検索フォーム 後にrender -->
<div class="container">
<h2>Users Search</h2>
<%= form_for(searches_path, :method => 'get') do |f| %>
		<%= f.text_field :search %>
		<%= f.select :search, ([["User","perfect_match"],["Book","backward_match"]]) %>
		<%= f.select :search, ([["完全一致","perfect_match"],["後方一致","backward_match"],["前方一致","forward_match"]]) %>
		<%= f.submit 'Search', :name => 'nill' %>
<% end %>
<!-- body部分 -->
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: current_user %>
			<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>

		<div class="col-xs-9">

			<h2>Users</h2>
			<!--users一覧 -->
			<%= render 'index', users: @users %>
			<!--users一覧 -->

		</div>
	</div>
</div>